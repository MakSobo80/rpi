<Window x:Class="Notatnik.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Zaloguj przez GitHub" Width="200" Margin="0,10,0,10" Click="GitHubLogin_Click"/>
            <Button Content="Kontynuuj bez logowania" Width="200" Click="ContinueWithoutLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
