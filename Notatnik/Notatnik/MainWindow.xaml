<Window x:Class="Notatnik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notatnik"
        mc:Ignorable="d"
        Background="DarkGray"
        Title="Notatnik" Height="500px" Width="800px" MinHeight="400" MinWidth="533">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="227*" />
            <ColumnDefinition Width="573*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Margin="10,10,10,10"  Background="#FFC5C3C3" />
        <ComboBox HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Margin="0,222,0,0" Height="22" >
            <ComboBoxItem Selected="selectheader" x:Name="comboheader" Content="Header"/>
            <ComboBoxItem Selected="selectrule" x:Name="comborule" Content="Rule"/>
            <ComboBoxItem Selected="selectcodeblock" x:Name="combocodeblock" Content="CodeBlock"/>
            <ComboBoxItem Selected="selectimage" x:Name="comboimage" Content="Image"/>
            <ComboBoxItem Selected="selecttable" x:Name="combotable" Content="Table"/>
            <ComboBoxItem Selected="selecttasklist" x:Name="combotasklist" Content="Tasklist"/>
            <ComboBoxItem Selected="selectTextBlock" x:Name="comboTextBlock" Content="TextBlock"/>
            <ComboBoxItem Selected="selectListItem" x:Name="comboListItem" Content="ListItem"/>
            <ComboBoxItem Selected="selectlist" x:Name="combo" Content="List"/>
        </ComboBox>

        <Frame Grid.Column="0" Visibility="Hidden" x:Name="frametable" VerticalAlignment="Top" Height="150px" Margin="0,237,0,0">
            <Frame.Content>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Width="100" VerticalAlignment="Center">
                        <Label Margin="10,10,0,0" Content="Liczba kolumn"></Label>
                        <Label Margin="10,15,0,0" Content="Liczba wierszy"></Label>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Center">
                        <TextBox HorizontalAlignment="center" Background="#FFE5E5E5" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="20" Margin="0,0,0,0"/>
                        <TextBox HorizontalAlignment="center" Background="#FFE5E5E5" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="20" Margin="0,20,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Frame.Content>
        </Frame>

        <Frame Grid.Column="0" Visibility="Hidden" x:Name="frameheader" VerticalAlignment="Top" Height="150px" Margin="0,237,0,0">
            <Frame.Content>
                <ComboBox SelectedItem="0" HorizontalAlignment="center" Margin="0,40,0,0" VerticalAlignment="Top" Width="120">
                    <ComboBoxItem Content="Header 1"/>
                    <ComboBoxItem Content="Header 2"/>
                    <ComboBoxItem Content="Header 3"/>
                    <ComboBoxItem Content="Header 4"/>
                    <ComboBoxItem Content="Header 5"/>
                    <ComboBoxItem Content="Header 6"/>
                </ComboBox>
            </Frame.Content>
        </Frame>

        <Frame Grid.Column="0" Visibility="hidden" x:Name="framerule" VerticalAlignment="Top" Height="150px" Margin="0,237,0,0"/>

        <Frame Grid.Column="0" Visibility="Hidden" x:Name="framecodeblock" VerticalAlignment="Top" Height="150px" Margin="0,237,0,0">
            <Frame.Content>
                <StackPanel>
                    <ComboBox SelectedIndex="0" BorderBrush="DarkGray" HorizontalAlignment="center" VerticalAlignment="Top" Width="120" Margin="0,20,0,0">
                        <ComboBoxItem Content="Python"/>
                        <ComboBoxItem Content="C#"/>
                        <ComboBoxItem Content="Java"/>
                        <ComboBoxItem Content="HTML"/>
                        <ComboBoxItem Content="CSS"/>
                        <ComboBoxItem Content="JavaScript"/>
                    </ComboBox>

                    <Button Content="Bold" Foreground="black" Background="#FFE5E5E5" BorderBrush="DarkGray" HorizontalAlignment="center" Margin="0,15,0,0" VerticalAlignment="center" Width="124" Height="40"/>
                    <Button Content="Italic" Foreground="black" Background="#FFE5E5E5" BorderBrush="DarkGray" HorizontalAlignment="center" Margin="0,5,0,0" VerticalAlignment="center" Width="124" Height="40"/>
                </StackPanel>
            </Frame.Content>
        </Frame>

        <Frame Grid.Column="0" Visibility="Hidden" x:Name="frameimage" VerticalAlignment="Top" Height="150px" Margin="0,230,0,0">
            <Frame.Content>
                <Button Content="Open file" Foreground="black" Background="#FFE5E5E5" BorderBrush="DarkGray" HorizontalAlignment="center" Margin="0,20,0,0"  VerticalAlignment="Center" Width="124" Height="50"/>
            </Frame.Content>
        </Frame>

        <Frame Grid.Column="0" Visibility="Hidden" x:Name="frametasklist" VerticalAlignment="Top" Height="150px" Margin="0,230,0,0">
            <Frame.Content>
                <StackPanel>
                    <Label Margin="50,50,0,0" Content="Ilosc taskow do zrobienia"></Label>
                    <TextBox HorizontalAlignment="center" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="20" Margin="0,20,0,0"/>
                </StackPanel>
            </Frame.Content>
        </Frame>

        <Frame Grid.Column="0" Visibility="Hidden" x:Name="frametextblock" VerticalAlignment="Top" Height="150px" Margin="0,230,0,0">
            <Frame.Content>
                <StackPanel>
                    <Button Content="Bold" Foreground="black" Background="#FFE5E5E5" BorderBrush="DarkGray" HorizontalAlignment="center" Margin="0,50,0,0" VerticalAlignment="center" Width="124" Height="40"/>
                    <Button Content="Italic" Foreground="black" Background="#FFE5E5E5" BorderBrush="DarkGray" HorizontalAlignment="center" Margin="0,5,0,0" VerticalAlignment="center" Width="124" Height="40"/>

                </StackPanel>
            </Frame.Content>
        </Frame>

        <Frame Grid.Column="0" Visibility="Hidden" x:Name="framelistitem" VerticalAlignment="Top" Height="150px" Margin="0,237,0,0">
            <Frame.Content>
                <StackPanel>
                    <Label Margin="50,30,0,0" Content="Wpisz dlugosc itemlisty"></Label>
                    <TextBox HorizontalAlignment="center" TextWrapping="Wrap" VerticalAlignment="center" Width="50" Height="20" Margin="0,20,0,0"/>
                </StackPanel>
            </Frame.Content>
        </Frame>
        <Frame Grid.Column="0" Visibility="Hidden" x:Name="framelist" VerticalAlignment="Top" Height="150px" Margin="0,237,0,0">
            <Frame.Content>
                <StackPanel>
                    <Label Margin="50,30,0,0" Content="Wpisz dlugosc listy"></Label>
                    <TextBox HorizontalAlignment="center" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="20" Margin="0,10,0,0"/>
                    <CheckBox HorizontalAlignment="center" Content="Numeryczna" Height="15" Margin="0,5,0,0" Width="120"/>
                </StackPanel>
            </Frame.Content>
        </Frame>
        <Menu VerticalAlignment="Top" Background="#FFE5E5E5" BorderBrush="DarkGray" Height="18">
            <MenuItem Grid.Column="0" Header="_Plik">
                <MenuItem Header="Otwórz plik" x:Name="menuOpenFile" />
                <MenuItem Header="Zapisz plik" x:Name="menuSaveFile" />
                <MenuItem Header="Wyślij plik" x:Name="menuSendFile" />
                <MenuItem Header="Pobierz plik" x:Name="menuGetFile" />
                <Separator />
                <MenuItem Header="Zamknij" x:Name="menuExit" />
            </MenuItem>
        </Menu>
        <Button Content="Utworz element" Foreground="black" Background="#FFE5E5E5" BorderBrush="DarkGray" HorizontalAlignment="Center" Margin="0,394,0,0"  VerticalAlignment="Top"  Width="124" Height="50" Click="Button_Click"/>
    </Grid>
</Window>