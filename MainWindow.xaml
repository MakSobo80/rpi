<Window x:Class="Notatnik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notatnik"
        mc:Ignorable="d"
        Background="DarkGray"
        Title="Notatnik" Height="500px" Width="800px">

    <Grid>
        <StackPanel Margin="240,0,40,0" VerticalAlignment="Center" Width="520" Height="422" Background="#FFC5C3C3">

        </StackPanel>
        <ComboBox BorderBrush="DarkGray" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="44,226,0,0" >
            <ComboBoxItem Selected="selectheader" x:Name="comboheader" Content="Header"/>
            <ComboBoxItem Selected="selectrule" x:Name="comborule" Content="Rule"/>
            <ComboBoxItem Selected="selectcodeblock" x:Name="combocodeblock" Content="CodeBlock"/>
            <ComboBoxItem Selected="selectimage" x:Name="comboimage" Content="Image"/>
            <ComboBoxItem Selected="selecttable" x:Name="combotable" Content="Table"/>
            <ComboBoxItem Selected="selecttasklist" x:Name="combotasklist" Content="Tasklist"/>
            <ComboBoxItem Selected="selectTextBlock" x:Name="comboTextBlock" Content="TextBlock"/>
            <ComboBoxItem Selected="selectListItem" x:Name="comboListItem" Content="ListItem"/>
            <ComboBoxItem Selected="selectlist" x:Name="combo" Content="List"/>
        </ComboBox>

        <Frame Visibility="Visible" x:Name="frametable" HorizontalAlignment="Left" VerticalAlignment="top" Width="200px" Height="150px" Margin="20,253,0,0">
            <Frame.Content>
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="top" Width="200px" Height="150px" Margin="0,0,0,0">
                    <TextBox HorizontalAlignment="Left" Background="#FFE5E5E5" TextWrapping="Wrap" Text="Wpisz liczbe kolumn" VerticalAlignment="Top" Width="123" Height="40" Margin="24,28,0,0"/>
                    <TextBox HorizontalAlignment="Left" Background="#FFE5E5E5" TextWrapping="Wrap" Text="Wpisz liczbe wierszy" VerticalAlignment="Top" Width="123" Height="40" Margin="24,20,0,0"/>
                </StackPanel>
            </Frame.Content>
        </Frame>

        <Frame Visibility="Hidden" x:Name="frameheader" HorizontalAlignment="Left" VerticalAlignment="top" Width="200px" Height="150px" Margin="20,253,0,0">
            <Frame.Content>
                <ComboBox SelectedItem="0" HorizontalAlignment="Left" Margin="24,20,0,0" VerticalAlignment="Top" Width="120">
                    <ComboBoxItem Content="Header 1"/>
                    <ComboBoxItem Content="Header 2"/>
                    <ComboBoxItem Content="Header 3"/>
                    <ComboBoxItem Content="Header 4"/>
                    <ComboBoxItem Content="Header 5"/>
                    <ComboBoxItem Content="Header 6"/>
                </ComboBox>
            </Frame.Content>
        </Frame>

        <Frame Visibility="Hidden" x:Name="framerule" HorizontalAlignment="Left" VerticalAlignment="top" Width="200px" Height="150px" Margin="20,253,0,0">
        </Frame>

        <Frame Visibility="Hidden" x:Name="framecodeblock" HorizontalAlignment="Left" VerticalAlignment="top" Width="200px" Height="150px" Margin="20,253,0,0">
            <Frame.Content>
                <StackPanel>
                    <ComboBox SelectedIndex="0" BorderBrush="DarkGray" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="24,20,0,0">
                        <ComboBoxItem Content="Python"/>
                        <ComboBoxItem Content="C#"/>
                        <ComboBoxItem Content="Java"/>
                        <ComboBoxItem Content="HTML"/>
                        <ComboBoxItem Content="CSS"/>
                        <ComboBoxItem Content="JavaScript"/>
                    </ComboBox>

                    <Button Content="Bold" Foreground="black" Background="#FFE5E5E5" BorderBrush="DarkGray" HorizontalAlignment="Left" Margin="60,20,0,0" VerticalAlignment="Top" Width="60px"/>
                    <Button Content="Italic" Foreground="black" Background="#FFE5E5E5" BorderBrush="DarkGray" HorizontalAlignment="Left" Margin="60,5,0,0" VerticalAlignment="Top" Width="60px"/>
                </StackPanel>
            </Frame.Content>
        </Frame>

        <Frame Visibility="Hidden" x:Name="frameimage" HorizontalAlignment="Left" VerticalAlignment="top" Width="200px" Height="150px" Margin="20,253,0,0">
            <Frame.Content>
                <Button Content="Open file" Foreground="black" Background="#FFE5E5E5" BorderBrush="DarkGray" HorizontalAlignment="Left" Margin="24,20,0,0"  VerticalAlignment="Center" Width="124" Height="50"/>
            </Frame.Content>
        </Frame>

        <Frame Visibility="Hidden" x:Name="frametasklist" HorizontalAlignment="Left" VerticalAlignment="top" Width="200px" Height="150px" Margin="20,253,0,0">
            <Frame.Content>
                <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="Wpisz ilosc taskow do zrobienia" VerticalAlignment="Top" Width="123" Height="40" Margin="24,20,0,0"/>
            </Frame.Content>
        </Frame>

        <Frame Visibility="Hidden" x:Name="frametextblock" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200px" Height="150px" Margin="20,253,0,0">
            <Frame.Content>
                <StackPanel Width="200px" Height="150px" VerticalAlignment="Center">
                    <Button Content="Bold" Foreground="black" Background="#FFE5E5E5" BorderBrush="DarkGray" HorizontalAlignment="Left" Margin="60,20,0,0" VerticalAlignment="Top" Width="60px"/>
                    <Button Content="Italic" Foreground="black" Background="#FFE5E5E5" BorderBrush="DarkGray" HorizontalAlignment="Left" Margin="60,5,0,0" VerticalAlignment="Top" Width="60px"/>

                </StackPanel>
            </Frame.Content>
        </Frame>

        <Frame Visibility="Hidden" x:Name="framelistitem" HorizontalAlignment="Left" VerticalAlignment="top" Width="200px" Height="150px" Margin="20,253,0,0">
            <Frame.Content>
                <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="Wpisz dlugosc itemlisty" VerticalAlignment="Top" Width="123" Height="40" Margin="24,20,0,0"/>
            </Frame.Content>
        </Frame>

        <Frame Visibility="Hidden" x:Name="framelist" HorizontalAlignment="Left" VerticalAlignment="top" Width="200px" Height="150px" Margin="20,253,0,0">
            <Frame.Content>
                <StackPanel>
                    <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="Wpisz dlugosc listy" VerticalAlignment="Top" Width="123" Height="40" Margin="24,20,0,0"/>
                    <CheckBox Content="Numeryczna" Height="13" Margin="0,20,0,0" Width="152"/>
                </StackPanel>
            </Frame.Content>
        </Frame>

        <Button Content="Utworz element" Foreground="black" Background="#FFE5E5E5" BorderBrush="DarkGray" HorizontalAlignment="Left" Margin="44,403,0,0"  VerticalAlignment="Top"  Width="124" Height="50"/>
        <Menu VerticalAlignment="Top" Background="#FFE5E5E5" BorderBrush="DarkGray">
            <MenuItem Header="_Plik">
                <MenuItem Header="Otwórz plik" x:Name="menuOpenFile" />
                <MenuItem Header="Zapisz plik" x:Name="menuSaveFile" />
                <MenuItem Header="Wyślij plik" x:Name="menuSendFile" />
                <MenuItem Header="Pobierz plik" x:Name="menuGetFile" />
                <Separator />
                <MenuItem Header="Zamknij" x:Name="menuExit" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>